<h2>Editing Product</h2>

<%= error_messages_for :product %>

<% form_for(:product, :url => product_path(@product), :html => { :method => :put }) do |f| %>
  
  <%= render :partial => 'product_form', :locals => {:f => f} %>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Back', products_path(:oss => (@product.oss ||= 'false')) %>