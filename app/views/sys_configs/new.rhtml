<h2>New Configuration for System <%= @system.name %></h2>

<%= error_messages_for :sys_config %>

<% form_for(:sys_config, :url => user_system_sys_configs_path(@user, @system)) do |f| %>
  
  <p>
    <b>Description</b><br />
    <%= f.text_area :description, :rows => '4', :cols => '40' %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>



<%= link_to 'Back', user_system_sys_configs_path %>